function rew = ENV_REWARD(s,agentReached2Key,agentReached2Door,agentBumped2wall)
% convert to row/column notation: 
[agentinPuddle,dist2Edge] = CreatePuddle(s);

if agentinPuddle,
    rew = min(-400.0 * dist2Edge,-1.0);
end

% 
% if agentReached2Door,
%     rew = 100.0;
% elseif agentReached2Key,
%     rew = 10.0;
% elseif agentBumped2wall,
%     rew = 0.0;
% else
%     rew = 0.0;
% end